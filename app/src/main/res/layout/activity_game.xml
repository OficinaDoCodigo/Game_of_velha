<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="br.com.henry.gameofvelha_v1.GameActivity">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height ="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/green"
        >

        <!-- PLAYER 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:layout_marginLeft="6dp"
                    >
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Carlos"
                        android:id="@+id/playerOneGame"
                        android:gravity="center"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
            </LinearLayout>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/timerPlayOne" />
        </LinearLayout>


        <!-- PLAYER 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"

            >


            <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="right"
                android:layout_height="50dp"
                android:orientation="horizontal"

                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:layout_marginRight="6dp"
                    >
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="Kaio"
                        android:id="@+id/playerTwoGame"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iconeloiro"
                    />
            </LinearLayout>
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:id="@+id/timerPlayTwo"
                android:rotationY="180"/>

        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_weight="1.3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="35sp"
            android:text="1:00"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">



        </TextView>

        <TextView
            android:id="@+id/simbolPlayOne"
            android:textSize="20sp"
            android:text="x"
            android:gravity="center"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">



        </TextView>
        <TextView
            android:textSize="20sp"
            android:text="-"
            android:gravity="center"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">



        </TextView>

        <TextView
            android:id="@+id/simbolPlayTwo"
            android:textSize="20sp"
            android:text="o"
            android:gravity="center"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"/>

        <TextView
            android:textSize="35sp"
            android:text="1:00"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="10"
        android:padding="25dp"
        >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableRow
                android:layout_weight="1">
                <TextView
                    android:layout_height="fill_parent"
                    android:id="@+id/a11"
                    android:layout_weight="1"/>
                <TextView  android:background="@color/cinzaescuro" android:layout_height="fill_parent" android:layout_width="2dp"/>
                <TextView
                    android:layout_height="fill_parent"
                    android:id="@+id/a12"
                    android:layout_weight="1"/>
                <TextView  android:background="@color/cinzaescuro" android:layout_height="fill_parent" android:layout_width="2dp"/>
                <TextView
                    android:layout_height="fill_parent"
                    android:id="@+id/a13"
                    android:layout_weight="1"/>
            </TableRow>
            <TextView
                android:background="@color/cinzaescuro"
                android:layout_height="2dp">

            </TextView>
            <TableRow
                android:layout_weight="1">
                <TextView
                    android:layout_height="fill_parent"
                    android:id="@+id/a21"
                    android:layout_weight="1"/>

                <TextView  android:background="@color/cinzaescuro" android:layout_height="fill_parent" android:layout_width="2dp"/>

                <TextView
                    android:layout_height="fill_parent"
                    android:id="@+id/a22"
                    android:layout_weight="1"/>

                <TextView  android:background="@color/cinzaescuro" android:layout_height="fill_parent" android:layout_width="2dp"/>

                <TextView
                    android:layout_height="fill_parent"
                    android:id="@+id/a23"
                    android:layout_weight="1"/>
            </TableRow>

            <TextView  android:background="@color/cinzaescuro" android:layout_height="2dp"/>

            <TableRow
                android:layout_weight="1">
                <TextView
                    android:layout_height="fill_parent"
                    android:id="@+id/a31"
                    android:layout_weight="1"/>
                <TextView  android:background="@color/cinzaescuro" android:layout_height="fill_parent" android:layout_width="2dp"/>
                <TextView
                    android:layout_height="fill_parent"
                    android:id="@+id/a32"
                    android:layout_weight="1"/>
                <TextView  android:background="@color/cinzaescuro" android:layout_height="fill_parent" android:layout_width="2dp"/>
                <TextView
                    android:layout_height="fill_parent"
                    android:id="@+id/a33"
                    android:layout_weight="1"/>
            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>
